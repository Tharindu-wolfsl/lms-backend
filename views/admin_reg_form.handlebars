<body>
<div class="admin_reg_form  text-center mt-5">
  <h5>Registration Form</h5>
{{!-- <p> <%=(typeof alertMsg!='undefined')? alertMsg:''%></p> --}}
<form method="post" action="register">
<div class="form-container">
   <div class="mt-4"><input class="text-center" type="text" placeholder="First Name" name="first_name" required></div>
   <div class="mt-4"><input class="text-center" type="text" placeholder="Last Name" name="last_name" required></div>
</div> 
<div class="form-container">
  <div class="mt-4"><input class="text-center" type="password" placeholder="Password" name="password"></div>
  <div class="mt-4"><input class="text-center" type="password" placeholder="Confirm Password" name="confirm_password" ></div> 
</div>
<div class="form-container">  
   <div class="mt-4"><input class="text-center" type="email" placeholder="Email Address" name="email_address" required></div>
  
</div>
<button class="btn btn-primary mt-4" type="submit">Register Now</button>
<br>
<a href="/login">Login</a>
</form>
</div>

</body>
</html>